<h2><%= I18n.t 'devise.registrations.new.sign_up' %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, I18n.t('devise.registrations.new.email') %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password, I18n.t('devise.registrations.new.password') %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, I18n.t('devise.registrations.new.password_confirmation') %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit I18n.t('devise.registrations.new.sign_up') %></div>
<% end %>

<%= render "devise/shared/links" %>
